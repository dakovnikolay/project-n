@model LoginViewModel

<section class="login-form-container">
    <h2>Login</h2>
    <form asp-controller="Account" asp-action="Login" method="post">
        <div asp-validation-summary="ModelOnly" class="custom-text-danger"></div>
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" asp-for="Username" class="form-control" required>
            <span asp-validation-for="Username" class="custom-text-danger"></span>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" asp-for="Password" class="form-control" required>
            <span asp-validation-for="Password" class="custom-text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
</section>
